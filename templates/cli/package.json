{
  "name": "newstore-templates",
  "version": "0.1.0",
  "description": "Tools for NewStore Templates",
  "main": "dist/index.js",
  "author": "Jens Simon <jens.simon@positiveminds.io>",
  "license": "MIT",
  "private": true,
  "bin": {
    "create-project-standards": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ncc build ./index.ts -w -o dist/",
    "prerelease": "rimraf ./dist/",
    "release": "ncc build ./index.ts -o ./dist/ --minify --no-cache --no-source-map-register",
    "prepublish": "yarn release",
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./ && tsc"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": "."
    }
  },
  "devDependencies": {
    "@jenssimon/eslint-config-base": "^4.0.0",
    "@jenssimon/eslint-config-typescript": "^3.0.1",
    "@types/es6-promisify": "^6.0.0",
    "@types/i18next-fs-backend": "^1.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.9.4",
    "@types/prompts": "^2.0.14",
    "@vercel/ncc": "^0.31.1",
    "axios": "^0.21.4",
    "chalk": "^4.1.2",
    "commander": "^7.2.0",
    "es6-promisify": "^7.0.0",
    "eslint": "^7.32.0",
    "globby": "^11.0.4",
    "i18next": "^20.3.5",
    "i18next-fs-backend": "^1.1.1",
    "jsonwebtoken": "^8.5.1",
    "prompts": "^2.4.1",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "typescript": "^4.4.3"
  }
}
