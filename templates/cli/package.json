{
  "name": "newstore-templates",
  "version": "0.1.0",
  "description": "Tools for NewStore Templates",
  "main": "dist/index.js",
  "author": "Jens Simon <jens.simon@positiveminds.io>",
  "license": "MIT",
  "private": true,
  "bin": {
    "create-project-standards": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "ncc build ./index.ts -w -o dist/",
    "prerelease": "rimraf ./dist/",
    "release": "ncc build ./index.ts -o ./dist/ --minify --no-cache --no-source-map-register",
    "prepublish": "yarn release",
    "lint": "eslint --fix --ext .tsx,.ts,.jsx,.js ./ && tsc"
  },
  "eslintConfig": {
    "extends": [
      "@jenssimon/base",
      "@jenssimon/typescript"
    ],
    "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": "."
    }
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.3",
    "@jenssimon/eslint-config-base": "^3.1.0",
    "@jenssimon/eslint-config-typescript": "^2.2.0",
    "@types/es6-promisify": "^6.0.0",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^15.6.0",
    "@types/prompts": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "@vercel/ncc": "^0.28.5",
    "axios": "^0.21.1",
    "commander": "^7.2.0",
    "es6-promisify": "^6.1.1",
    "eslint": "^7.26.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-redux": "^3.3.2",
    "eslint-plugin-sonarjs": "^0.7.0",
    "globby": "^11.0.3",
    "i18next": "^20.2.4",
    "i18next-fs-backend": "^1.1.1",
    "jsonwebtoken": "^8.5.1",
    "prompts": "^2.4.1",
    "rimraf": "^3.0.2",
    "rxjs": "^7.0.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "chalk": "^4.1.1"
  }
}
