{% extends 'email_base' %}

{% block title %}[[[title]]]{% endblock %}

{% block header %}[[[header]]]{% endblock %}

{% block body %}
	<table class="email-body" cellpadding="0" cellspacing="0" border="0" align="center">
		<tr>
			<td>
				<p style="padding-left:30px;">[[[text1]]]{{ external_order_id | default(order_id) }}[[[text2]]]</p>
				<p class="signature" style="padding-left:60px;">[[[greeting]]]</p>
				<p class="signature" style="padding-left:60px;">[[[customer_service]]]</p>
			</td>
		</tr>
	</table>
	<div class="item_list">
		<div class="item_list_header">
			<p>[[[order_summary]]]</p>
	    </div>
	    {% for item in items %}
	        <div class="item_list_item">
	            <div class="item_list_info">
                    <div class="item_list_id">
                        <p>{{ item.name }}&ensp;
                            <span style="font-size:.1in;display:inline-block">([[[quantity]]] {{ item.quantity }})</span>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
